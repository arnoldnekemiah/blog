<h2 class = "signup-heading">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "sign-up-form">

  <div class="username-div">
  <%= f.text_field :name, placeholder: "Add username" %>
  </div>

  <div class="email-div">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "add email address" %>
  </div>

  <div class="set-password">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "add new password" %>
  </div>

  <div class="confirm-password">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
  </div>


<%= render "devise/shared/links" %>
